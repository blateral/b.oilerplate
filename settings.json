{
    "css": {
        "scss": {
            "src": "src/css/**/*.scss"
        },
        "main": {
            "src": "src/css/main.scss",
            "dist": "dist/css/main.css"
        }
    },

    "js": {
        "modules": {
            "src": "src/js/modules/*.js"
        },
        "main": {
            "src": "src/js/main.js",
            "dist": "dist/tmp/js/main.js"
        },
        "vendor": {
            "src": [],
            "dist": "dist/tmp/js/vendor.js"
        },
        "all": {
            "dist": "dist/js/all.js"
        }
    },

    "html": {
        "all": {
            "src": "src/html/**/*"
        },
        "main": {
            "src": "src/html/*.html"
        },
        "layout": {
            "src": "src/html/layout/default.html"
        },
        "includes": {
            "src": "src/html/includes/*"
        },
        "helper": {
            "src": "src/html/helper/*.js"
        },
        "data": {
            "src": "src/html/data/*.json"
        }
    },

    "sftp": {
        "src": "dist",
        "dest": "/path/to/your/destination",

        "server": {
            "host": "yourdomain.com",
            "port": "22",
            "key": {
                "username": "username",
                "password": "password"
            }
        }
    }
}
